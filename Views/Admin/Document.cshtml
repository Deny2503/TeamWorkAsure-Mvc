@using WebApplication16.Data.Models
@{
    var doc = new Document { Id = 1, Title = "ExampleDoc", Status = Document.DocumentStatus.InReview };
}

<div class="glass p-10 rounded-xl space-y-6">

    <h1 class="text-4xl font-bold">Review: @doc.Title</h1>

    <p class="text-lg"><b>Current Status:</b> @doc.Status</p>

    <form class="space-y-4">
        <select class="bg-white/20 border border-white/30 text-white p-3 rounded w-full">
            @foreach (var s in Enum.GetValues(typeof(Document.DocumentStatus)))
            {
                <option>@s</option>
            }
        </select>

        <button class="btn w-full">Apply</button>
    </form>

    <a href="/Admin/Documents" class="btn-secondary">Back</a>

</div>
