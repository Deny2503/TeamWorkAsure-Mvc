<div class="max-w-lg mx-auto bg-white p-6 rounded shadow">

    <h2 class="text-2xl font-semibold mb-4">Upload Document</h2>

    <form asp-action="Upload" method="post" enctype="multipart/form-data" class="space-y-4">

        <div>
            <label class="block mb-1 font-medium">Choose file</label>
            <input type="file" name="file"
                   class="w-full border p-2 rounded bg-gray-50" />
        </div>

        <button class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
            Upload
        </button>

    </form>

</div>
