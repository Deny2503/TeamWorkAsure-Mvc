@model WebApplication16.Models.Document

<div class="bg-white p-6 rounded shadow">

    <h2 class="text-2xl font-semibold mb-4">@Model.FileName</h2>

    <p class="text-gray-700"><b>Status:</b> @Model.Status</p>
    <p class="text-gray-700"><b>Uploaded:</b> @Model.UploadedAt</p>

    <a href="@ViewBag.DownloadUrl"
       class="inline-block mt-4 px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700">
        Download
    </a>

    <hr class="my-6" />

    <h3 class="text-xl font-semibold mb-2">History</h3>

    <div class="space-y-2">
        @foreach (var h in Model.History)
        {
            <div class="p-3 bg-gray-100 rounded">
                <p>@h.Timestamp — <b>@h.Action</b></p>
                @if (h.FromStatus != null)
                {
                    <p class="text-sm text-gray-600">@h.FromStatus → @h.ToStatus</p>
                }
            </div>
        }
    </div>

</div>
