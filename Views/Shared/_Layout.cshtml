<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Document Manager</title>

    <link rel="stylesheet" href="@Url.Content("~/css/site.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/custom-components.css")" />
</head>

<body class="min-h-screen bg-gradient-to-br from-indigo-500 via-purple-500 to-pink-500 text-white">

    <nav class="glass mx-6 mt-4 px-6 py-4 flex justify-between items-center">
        <a href="/" class="text-2xl font-bold tracking-wide">DocManager</a>

        <div class="flex gap-6 text-lg">
            <a href="/Document" class="hover:text-yellow-200 transition">My Docs</a>
            <a href="/Admin/Documents" class="hover:text-yellow-200 transition">Admin</a>
        </div>
    </nav>

    <main class="max-w-6xl mx-auto mt-10 glass p-10">
        @RenderBody()
    </main>

</body>
</html>
